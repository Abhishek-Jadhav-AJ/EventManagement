<h3>{{viewTitle}}</h3>

<form action="/quiz" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{quiz._id}}">
    {{!-- <h3>Insert quiz Details</h3> --}}

     <br>
        <label>Payment Link: &nbsp;&nbsp;
        <a href="http://localhost:5500/payment2.html"> Click Here </a>
        </label>
        <br>
        <br>
    
    <div class="form-group">
        <label>Participant Name :</label>
        <input type="text" class="form-control" name="fullName"  value="{{quiz.fullName}}">
        <div class="text-danger">
            {{quiz.fullNameError}}</div>
    </div>
        <div class="form-group">
        <label>Department :</label>

         <select class="form-control" name = "department" value="{{quiz.department}}" style="font-size: 20px;"  >
            <option>Computer</option>
            <option>IT</option>
            <option>ENTC</option>
            <option>ME</option>
            <option>Civil</option>
         </select>
        
        {{!-- <input type="text" class="form-control" name="department"  value="{{quiz.department}}"> --}}
        <div class="text-danger">
            {{quiz.departmentError}}</div>
    </div>
        <div class="form-group">
        <label>Event Name :</label>
        <select class="form-control" name = "eventName" value="{{quiz.eventName}}" style="font-size: 20px;"  >
            <option selected>TechQuiz Competition</option>
         </select>

        {{!-- <input type="text" class="form-control" name="eventName" placeholder="e.g. James Alexander Thomas" value="{{quiz.eventName}}"> --}}
        <div class="text-danger">
            {{quiz.eventNameError}}</div>
    </div>
    
    <div class="form-group">
            <label>Payment Status : </label>
            <select class="form-control" name="status" placeholder="Status" value="{{quiz.status}}">
            
            <option value="Yes" >Yes</option>
            <option value="No" selected>No</option>
            </select>
           <div class="text-danger">
            {{quiz.statusError}}</div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="http://localhost:5500/Event.html"><i class="fa fa-list-alt"></i> Back </a>
        {{!-- <a class="btn btn-secondary" href="/quiz/list"><i class="fa fa-list-alt"></i> Display Data</a> --}}
    </div>
</form>